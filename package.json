{
  "name": "rca-crm-system",
  "version": "1.0.0",
  "description": "Sistema CRM para Red de Clínicas con integración WhatsApp Business, Facebook e Instagram",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "db:seed": "tsx scripts/run-seed.ts",
    "db:seed:brigada": "tsx scripts/seed-brigada-2025-juarez.ts",
    "db:migrate:calendario": "tsx scripts/run-migration-calendario.ts",
    "meta:suscribir": "tsx scripts/suscribir-meta-webhooks.ts",
    "meta:verificar": "tsx scripts/verificar-meta-pagina-token.ts",
    "meta:test-webhook": "tsx scripts/test-webhook-facebook.ts",
    "dev": "tsx watch src/index.ts",
    "build": "echo 'Build not needed, using tsx'",
    "build:demo": "rm -rf dist && cp -r src dist && find dist -name '*.ts' -type f -exec sh -c 'mv \"$1\" \"${1%.ts}.js\"' _ {} \\;",
    "start": "tsx src/index.ts",
    "deploy:build": "npm run build && cd frontend && npm run build && cd ..",
    "deploy:pack": "tar -czf backend-demo.tar.gz dist/ package.json package-lock.json .env && cd frontend && tar -czf frontend-demo.tar.gz .next/ public/ package.json package-lock.json next.config.js && mv frontend-demo.tar.gz .. && cd ..",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "crm",
    "whatsapp",
    "clinicas",
    "typescript",
    "node"
  ],
  "author": "MarketingPro",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.23.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.5.2",
    "@types/pdfkit": "^0.13.4",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
